{{#each comments}}
<ul>
    <li class="comment ">
        <article class="comment-body">
            <footer class="comment-meta">
                <div class="comment-author">
                    <img alt="" src="/static/assets/img/team/t-1.jpg" class="">
                    <b class="fn">
                        <p>
                        </p>
                        <a href="#" rel="external nofollow" class="url">
                            {{this.user_name}}
                        </a>
                    </b>
                    <span class="says">گفته:</span>
                </div>
                <!-- .comment-author -->

                <div class="comment-metadata">
                    <a href="#">
                        <time datetime="2018-09-02T12:17:07+00:00">
                            {{this.created_at_persian}}
                        </time>
                    </a>
                </div><!-- .comment-metadata -->

            </footer><!-- .comment-meta -->

            <div class="comment-content">
                <p>
                    {{this.comment}}
                </p>
            </div><!-- .comment-content -->

            <div class="reply">
                <a rel="nofollow" class="comment-reply-link" href="#">پاسخ</a>
            </div>
        </article>
        {{#if (hasChild this)}}
        {{>list comments=(getChildrens this.id)}}
        {{/if}}
        <!-- .comment-body -->
        {{!-- - .children --> --}}
    </li><!-- #comment-## -->

</ul>
{{/each}}